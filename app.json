        },
        "tokens": [
          {
            "name": "message",
            "type": "string",
            "title": {
              "en": "Message"
            },
            "example": {
              "en": "Hello from Telegram!"
            }
          },
          {
            "name": "from",
            "type": "string",
            "title": {
              "en": "Sender"
            },
            "example": {
              "en": "Julian"
            }
          },
          {
            "name": "username",
            "type": "string",
