              "en": "Sender Username"
            },
            "example": {
              "en": "julian022"
            }
          },
          {
            "name": "chat",
            "type": "string",
            "title": {
              "en": "Name of the Chat"
            },
            "example": {
              "en": "Family Group Chat"
            }
          },
          {
            "name": "chatType",
            "type": "string",
            "title": {
              "en": "Type of Chat"
            },
            "example": {
              "en": "Group"
            }
          }
        ],
        "id": "receiveMessage"
      }
    ],
    "actions": [
      {
        "title": {
          "en": "Send a message"
        },
        "titleFormatted": {
          "en": "Send message [[message]] to [[user]]"
        },
        "args": [
          {
            "type": "text",
            "name": "message",
            "title": {
              "en": "Message"
            },
            "placeholder": {
              "en": "Hello from Homey!"
            }
          },
          {
            "type": "autocomplete",
            "name": "user",
            "title": {
              "en": "User"
            },
            "placeholder": {
              "en": "Created with <3"
            }
          }
        ],
        "id": "sendNotification"
      }
    ]
  }
